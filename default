server {
         listen 80;
         server_name YourOnionAddress.onion;    # Store your .onion address here (README for more)
         location / {
                proxy_pass http://127.0.0.1:3000;
#                try_files $uri $uri/ =404;
                #allow local
                allow 127.0.0.1;
                #Block 
                deny all;
         }
}
